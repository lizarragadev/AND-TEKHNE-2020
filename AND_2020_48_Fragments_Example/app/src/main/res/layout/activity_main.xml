<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/fondo"
        android:layout_margin="10dp">
        <EditText
            android:id="@+id/etTextoDesdeActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escribir dato"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"/>

        <Button
            android:id="@+id/btnEnviarDesdeActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar desde Activity"
            android:layout_below="@id/etTextoDesdeActivity"
            android:layout_centerHorizontal="true"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameUno"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/fondo"
        android:layout_margin="10dp">
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameDos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/fondo"
        android:layout_margin="10dp">
    </FrameLayout>

</LinearLayout>