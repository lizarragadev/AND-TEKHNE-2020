<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp">

    <TextView
        android:id="@+id/tvDetallePais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre Pais"
        android:textAllCaps="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:textSize="25sp"
        android:gravity="center_horizontal"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Última actualización"
            android:textSize="10sp"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/tvDetalleFechaActualizacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:gravity="center_horizontal"
            android:textStyle="bold"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            card_view:contentPadding="5dp"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            card_view:cardBackgroundColor="#4CAF50"
            card_view:contentPaddingTop="20dp"
            card_view:contentPaddingBottom="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="HOY CONFIRMADOS"
                    android:textColor="#FFF"
                    android:textSize="15sp"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/tvDetalleHoyConfirmados"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="0"
                    android:textColor="#FFF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            card_view:contentPadding="5dp"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            card_view:cardBackgroundColor="#4CAF50"
            card_view:contentPaddingTop="20dp"
            card_view:contentPaddingBottom="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TOTAL CONFIRMADOS"
                    android:textColor="#FFF"
                    android:textSize="15sp"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/tvDetalleTotalConfirmados"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="0"
                    android:textColor="#FFF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            card_view:contentPadding="5dp"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            card_view:cardBackgroundColor="#FF9800"
            card_view:contentPaddingTop="20dp"
            card_view:contentPaddingBottom="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="HOY RECUPERADOS"
                    android:textColor="#FFF"
                    android:textSize="15sp"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/tvDetalleHoyRecuperados"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="0"
                    android:textColor="#FFF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            card_view:contentPadding="5dp"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            card_view:cardBackgroundColor="#FF9800"
            card_view:contentPaddingTop="20dp"
            card_view:contentPaddingBottom="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TOTAL RECUPERADOS"
                    android:textColor="#FFF"
                    android:textSize="15sp"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/tvDetalleTotalRecuperados"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="0"
                    android:textColor="#FFF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            card_view:contentPadding="5dp"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            card_view:cardBackgroundColor="#F44336"
            card_view:contentPaddingTop="20dp"
            card_view:contentPaddingBottom="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="HOY DECESOS"
                    android:textColor="#FFF"
                    android:textSize="15sp"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/tvDetalleHoyDecesos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="0"
                    android:textColor="#FFF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            card_view:contentPadding="5dp"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            card_view:cardBackgroundColor="#F44336"
            card_view:contentPaddingTop="20dp"
            card_view:contentPaddingBottom="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TOTAL DECESOS"
                    android:textColor="#FFF"
                    android:textSize="15sp"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/tvDetalleTotalDecesos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="0"
                    android:textColor="#FFF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>